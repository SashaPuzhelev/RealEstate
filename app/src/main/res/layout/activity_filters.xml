<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".FiltersActivity">
<TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textViewFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фильтры"
        style="@style/BlackTextView.Big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
/>
    <RadioGroup
            android:layout_marginTop="40dp"
        android:id="@+id/radio_group_choose_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilters"
        android:orientation="horizontal"
    >
        <RadioButton
                android:layout_marginRight="5dp"
                android:id="@+id/buy_radio_button"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Купить"
                android:gravity="center"
                android:button="@drawable/custom_background_radiobutton"
                android:background="@drawable/custom_background_radiobutton"
        />
        <RadioButton
                android:layout_marginRight="5dp"
                android:id="@+id/rent_radio_button"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Снять"
                android:button="@drawable/custom_background_radiobutton"
                android:gravity="center"
                android:background="@drawable/custom_background_radiobutton"
        />
        <RadioButton
                android:id="@+id/rent_for_days_radio_button"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Посуточно"
                android:gravity="center"
                android:button="@drawable/custom_background_radiobutton"
                android:background="@drawable/custom_background_radiobutton"
        >
        </RadioButton>
    </RadioGroup>
    <LinearLayout
            android:layout_marginTop="40dp"
            android:id="@+id/Region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_group_choose_type"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регион: "
                style="@style/BlackTextView"
        >
        </TextView>
        <TextView
                android:id="@+id/textViewRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Краснодар"
                android:clickable="true"
        />
    </LinearLayout>
    <TextView
            android:id="@+id/textViewArea"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Жилая площадь:"
            style="@style/BlackTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Region"
    />
    <EditText
            android:id="@+id/from_area"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:autofillHints="от"
            android:hint="от"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewArea"
    >
    </EditText>
    <EditText
            android:id="@+id/to_area"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:autofillHints="до"
            android:hint="до"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewArea"
    >
    </EditText>
    <TextView
            android:id="@+id/textViewPrice"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена:"
            style="@style/BlackTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_area"
    />
    <EditText
            android:id="@+id/from_price"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:autofillHints="от"
            android:hint="от"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPrice"
    >
    </EditText>
    <EditText
            android:id="@+id/to_price"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:autofillHints="до"
            android:hint="до"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPrice"
    >
    </EditText>
    <TextView
            android:id="@+id/textViewFloor"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Этажей в доме:"
            style="@style/BlackTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_price"
    />
    <EditText
            android:id="@+id/from_floor"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:autofillHints="от"
            android:hint="от"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewFloor"
    >
    </EditText>
    <EditText
            android:id="@+id/to_floor"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:autofillHints="до"
            android:hint="до"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewFloor"
    >
    </EditText>
    <Button
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Принять"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_floor"
    >

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>