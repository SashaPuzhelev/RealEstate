<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регион: "
                style="@style/BlackTextView"
        >
        </TextView>
        <TextView
                android:id="@+id/textViewRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Краснодар"
                android:clickable="true"
                android:onClick="onClickRegion"
        />
    </LinearLayout>
    <TextView
            android:layout_marginLeft="2dp"
            android:id="@+id/textViewSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поиск недвижимости"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/Region"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/BlackTextView.Big"
    >
    </TextView>
    <GridLayout
            android:id="@+id/Catalogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewSearch"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="35dp"
            android:columnCount="2"
            android:rowCount="3"
    >


        <FrameLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        >
            <Button
                    android:id="@+id/buy_button"
                    style="@style/TabButtonStyle"

            >
            </Button>
        </FrameLayout>
        <ImageView
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/key"
                android:layout_row="0" android:layout_column="0">
        </ImageView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Купить"
                android:layout_row="0" android:layout_column="0"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:layout_marginBottom="25dp"
        >
        </TextView>


        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        >
            <Button
                    android:id="@+id/rent_button"
                    style="@style/TabButtonStyle"
            >
            </Button>
        </FrameLayout>
        <ImageView
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bed"
                android:layout_row="0" android:layout_column="1">
        </ImageView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Снять"
                android:layout_row="0" android:layout_column="1"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:layout_marginBottom="25dp"
        >
        </TextView>
        <FrameLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        >
            <Button
                    android:id="@+id/new_house_button"
                    style="@style/TabButtonStyle"
            >
            </Button>
        </FrameLayout>
        <ImageView
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/newhome"
                android:layout_row="1" android:layout_column="0">
        </ImageView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Новостройки"
                android:layout_row="1" android:layout_column="0"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:layout_marginBottom="25dp"
        >
        </TextView>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        >
            <Button
                    android:id="@+id/house_button"
                    style="@style/TabButtonStyle"
            >
            </Button>
        </FrameLayout>
        <ImageView
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/house"
                android:layout_row="1" android:layout_column="1">
        </ImageView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дома"
                android:layout_row="1" android:layout_column="1"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:layout_marginBottom="25dp"
        >
        </TextView>
        <FrameLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        >
            <Button
                    android:id="@+id/commercial_button"
                    style="@style/TabButtonStyle"
            >
            </Button>
        </FrameLayout>
        <ImageView
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/moneyhouse"
                android:layout_row="2" android:layout_column="0">
        </ImageView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Коммерческая"
                android:layout_row="2" android:layout_column="0"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:layout_marginBottom="25dp"
        >
        </TextView>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        >
            <Button
                    android:id="@+id/rent_for_days_button"
                    style="@style/TabButtonStyle"
            >
            </Button>
        </FrameLayout>
        <ImageView
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/calendar"
                android:layout_row="2" android:layout_column="1">
        </ImageView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Посуточно"
                android:layout_row="2" android:layout_column="1"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:layout_marginBottom="25dp"
        >
        </TextView>
    </GridLayout>
    <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Catalogs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:layout_marginRight="10dp"
        >
        </ImageView>
        <TextView
                android:id="@+id/textViewPlaceAnAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Разместить объявление"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onClickPlaceAnAd"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>